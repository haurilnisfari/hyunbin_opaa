<!-- Main -->
<main>
    <section class="section-index-cat" id="index">
        <div class="container">
            <div class="row">
                <div class="col text-left section-index-title-cat">
                    <h2>Category List</h2>
                </div>
            </div>
            <div class="index-list col-lg-6 pl-lg-0 align-center">
                <table class="table table-responsive-sm text-center table-light table-striped" id="category-table">
                    <thead>
                        <tr class="text-left">
                            <th>Category</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                      <% @categories.each do |category| %>
                        <tr>
                          <td class="text-left">
                            <%= category.name %>
                          
                            <ul>
                            <% Category.where(parent_id: category.id).each do |sub| %>
                                <li><%= sub.name %>
                                <%= link_to 'Detail', category_path(sub) %> |
                                <%= link_to 'Edit', edit_category_path(sub) %> |
                                <%= link_to 'Delete', category_path(sub), method: :delete, data: {confirm: "Are you sure?"} %> 
                                </li>
                            <% end %>
                            </ul>
                          </td>
                          <td class="align-middle">
                              <%= link_to 'Detail', category_path(category) %> |
                              <%= link_to 'Edit', edit_category_path(category) %> |
                              <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure?"} %> 
                          </td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
                <%= paginate @categories %>
            </div>
        </div>

        <div class="container">
            <button type="submit" class="btn btn-add-new-expense">
                <%= link_to 'Add New Category', new_category_path %>
            </button>
        </div>
        
    </section>
</main>
