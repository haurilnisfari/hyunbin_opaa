<main>
    <section class="section-category-form">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pl-lg-0">
                    <div class="card card-category">
                        <div class="categry-new mt 3">
                            <h2 class="heading-new-category">Edit Category</h2>
                            <div class="form-group">
                              <%= form_for(@category) do |f| %>  
                                <%= f.label :name, { class: "control-label col-sm-3" }%>
                                <div class="col-sm-10">
                                  <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Category Name" %> </br>
                                </div>
                                <%= f.label :parent_id, { class: "control-label col-sm-3" }%>
                                <div class="col-sm-10">
                                  <%= f.select :parent_id, @categories.pluck(:name, :id), {prompt: "Select Parent Category"}, { class: "form-control" } %>
                                </div>
                                </br>
                                <button type="submit" class="btn btn-cancel mb-2 px-4">
                                    <%= link_to 'Cancel', :back%>
                                </button>
                                <%= f.submit "Save" , { class: "btn btn-save-account mb-2 px-4" } %>
                              <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>