<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>


<body class="login-body">
    <!-- Main -->
    <main>
        <section>
            <div class="container">
                <div class="row">

                <div class="col-md-6 col-sm-6">
                <a href="#" class="navbar-brand-login">
                    <%=image_tag("logo_ow@2x.png", alt: "Logo Owallet")%>
                </a>

                <h2 class="heading-login-title">JUST SPEND WELL </br>
                    YOU WILL LIVE WELL
                </h2>
                <div>
                    <%=image_tag("create_user.jpg", class: "w-75 rounded img-thumbnail", alt: "create user", align: "right")%>
                </div>
            </div>

            <div class="col-md-6 col-sm-6">
                <div class="card mx-auto card-login text-left" style="width: 20rem;">
                    <h2 class="heading-login">Create User</h2>
                    <%= form_for(@user) do |f| %>
                        <div class="form-group">
                          <div class="col-sm-10">
                              <%= f.label :name %>
                          </div>
                          <div class="col-sm-10">
                              <%= f.text_field :name %>
                          </div>
                          <% if @user.errors[:name].present? %>
                            <span class="red-text small-text">
                              <%= 'Name ' + @user.errors[:name].join(", ") %>
                            </span>
                          <% end %>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-sm-10">
                                <%= f.label :username %>
                            </div>
                            <div class="col-sm-10">
                                <%= f.text_field :username %>
                            </div>
                            <% if @user.errors[:username].present? %>
                              <span class="red-text small-text">
                                <%= 'Username ' + @user.errors[:username].join(", ") %>
                              </span>
                            <% end %>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <%= f.label :email %>
                            </div>
                            <div class="col-sm-10">
                                <%= f.text_field :email %>
                            </div>
                            <% if @user.errors[:email].present? %>
                              <span class="red-text small-text">
                                <%= 'Email ' + @user.errors[:email].join(", ") %>
                              </span>
                            <% end %>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <%= f.label :bio %>
                            </div>
                            <div class="col-sm-10">
                                <%= f.text_area :bio %>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <%= f.label :password %>
                            </div>
                            <div class="col-sm-10">
                                <%= f.password_field :password %>
                            </div>
                            <% if @user.errors[:password].present? %>
                              <span class="red-text small-text">
                                <%= 'Password ' + @user.errors[:password].join(", ") %>
                              </span>
                            <% end %>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10">
                                <%= f.label :password_confirmation %>
                            </div>
                            <div class="col-sm-10">
                                <%= f.password_field :password_confirmation %>
                            </div>
                            <% if @user.errors[:password_confirmation].present? %>
                              <span class="red-text small-text">
                                <%= 'Password Confirmation' + @user.errors[:password_confirmation].join(", ") %>
                              </span>
                            <% end %>
                        </div>
                        
                        <div class=”actions”>
                            <%= f.submit "Register", { class: "btn col-sm-10 btn-block btn-save-expense mb-2"} %>
                        </div>

                    <% end %>
                </div>
            </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</body>
</html>
