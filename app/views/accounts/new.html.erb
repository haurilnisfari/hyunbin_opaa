<!-- Main -->
<main>
    <section class="section-account-form">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pl-lg-0">
                    <div class="card card-account">
                        <div class="account-new mt 3">
                            <h2 class="heading-new-account">Create New Account</h2>
                            <div class="form-group">
                            <%= form_for(@account) do |f| %>
                                <%= f.label :name, { class: "control-label col-sm-3" }%>
                                <div class="col-sm-10">
                                    <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Account Name" %> </br>
                                </div>
                                <%= f.submit "Save" , { class: "btn btn-save-account mb-2 px-4" } %>
                            <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

