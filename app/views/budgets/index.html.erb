<!-- Main -->
<main>
    <section class="section-expense-cat" id="index">
        <div class="container">
            <div class="row">
                <div class="col text-left section-index-title-cat">
                    <h2>Budgeting</h2>
                </div>
            </div>
            <div class="index-list col-lg-12 pl-lg-12 align-center">
                <table class="table table-responsive-sm text-center table-light table-striped" >
                    <thead>
                        <tr class="align-left">
                            <th><%= sortable "name" %></th>
                            <th><%= sortable "period" %></th>
                            <th>Total Budget</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @budgets.each do |budget| %>
                            <tr class= "align-left">
                                <td><%= budget.name %></td>
                                <td><%= budget.period %></td>
                                <td>12000000</td>
                                <td class="align-middle">
                                    <%= link_to 'Detail', budget_path(budget) %> |
                                    <%= link_to 'Edit', edit_budget_path(budget) %> |
                                    <%= link_to 'Delete', budget_path(budget), method: :delete, data: {confirm: "Are you sure?"} %> 
                                </td>
                            </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="container">
            <button type="submit" class="btn btn-add-new-expense">
                <%= link_to 'Add New Budget', new_budget_path %>
            </button>
        </div>
        
    </section>
</main>
